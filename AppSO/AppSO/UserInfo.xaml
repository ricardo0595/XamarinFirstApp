<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSO.UserInfo">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="10,35,10,10" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

                <Image Margin="0,0,0,0" Source="user.png" HeightRequest="70" WidthRequest="70"/>
                <Label  x:Name="fullName" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
                <Label x:Name="email" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

                <Label x:Name="phone" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
                <Label x:Name="birthday" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Text="Regresar" TextColor="White" BackgroundColor="Red"
                    Clicked="onExit" HorizontalOptions="FillAndExpand"/>

                </Grid>
               

            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>